@model Pweb_2021.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Reserva</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DataInicial" class="control-label"></label>
        <input asp-for="DataInicial" type="date" class="form-control" />
        <span asp-validation-for="DataInicial" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataFinal" class="control-label"></label>
        <input asp-for="DataFinal" type="date" class="form-control" />
        <span asp-validation-for="DataFinal" class="text-danger"></span>
    </div>
    <input asp-for="ImovelId" class="form-control" type="hidden" value="@ViewBag.helper.extraId1" />
    <input asp-for="ApplicationUserId" class="form-control" type="hidden" value="@ViewBag.helper.userId" />
    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
