@model IEnumerable<Pweb_2021.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<h1>Apreciações</h1>

<p>
    <a asp-action="Create">Criar nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estrelas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reserva.Imovel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estrelas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reserva.Imovel.ApplicationUserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FeedbackId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FeedbackId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FeedbackId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
