@model Pweb_2021.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Tens a certeza que queres Apagar este utilizador?</h3>
@if (ViewBag.isGestor)
{

    <h4 class="text-danger">Está prestes a pagar um gestor, isto significa todos os funcionarios criados por este, os imoveis e as reservas, imagens e comentarios relacionados ao imóvel.</h4>
}
<div>
    <h4>Utilizador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        @if (User.IsInRole(Pweb_2021.Statics.Roles.CLIENTE))
        {
            <dt class="col-sm-2">
                Avaliação
            </dt>
            <dd class="col-sm-10">
                @ViewBag.avaliacao
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="APAGAR" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista</a>
    </form>
</div>
